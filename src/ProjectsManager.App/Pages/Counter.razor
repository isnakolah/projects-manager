@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount.ToString()</p>

<button class="py-5 px-4" @onclick="IncrementCount">Click me</button>

@code {

    private int currentCount;

    private void IncrementCount()
    {
        currentCount++;
    }
}
